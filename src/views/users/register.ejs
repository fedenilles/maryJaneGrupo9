<html lang="en">
    <%-include ("../partials/head.ejs") %>
<body>
	    <div class="container">
            <%-include ("../partials/header.ejs") %>


            <main>
                
                <!-- Top content -->
        <div class="top-content">
        	
            <div class="inner-bg">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2 text">
                        <a href="/"> <h1><strong>Maryjane</strong> Growshop </h1> </a>
                            <div class="description">
                            	<p>
                                    Registrate para conocer<br> todos los beneficios                            	
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        
                        <div class="col-sm-6 col-sm-offset-3 form-box">
                            <div class="img-login-form"><i class="fa-solid fa-user"></i> </div>
                        	<div class="form-top">
                                
                        		<div class="form-top-left">
                        			<h3>Registro</h3>
                        		</div>
                        	</div>
